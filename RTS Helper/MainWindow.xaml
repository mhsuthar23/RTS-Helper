<Window x:Class="RTSHelper.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:RTSHelper" mc:Ignorable="d" 
        Title="MainWindow" Height="200" Width="620" AllowsTransparency="True" WindowStyle="None" 
        MouseDown="Window_MouseDown" Topmost="True" WindowStartupLocation="Manual" Top="958" Left="945">
    <Window.Background>
        <SolidColorBrush Opacity="2" Color="Black" />
    </Window.Background>
    
    <Window.Resources>
        <Style x:Key="ComboBoxColor" TargetType="{x:Type ComboBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Grid.Column="2" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border x:Name="Border" Grid.ColumnSpan="2" CornerRadius="2" Background="#F111" BorderBrush="White" BorderThickness="1" />
                                            <Border Grid.Column="0" CornerRadius="2,0,0,2" Margin="1" Background="#F111" BorderBrush="White" BorderThickness="0,0,1,0" />
                                            <Path x:Name="Arrow" Grid.Column="1" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="ToggleButton.IsMouseOver" Value="true">
                                                <Setter TargetName="Border" Property="Background" Value="Green" />
                                            </Trigger>
                                            <Trigger Property="ToggleButton.IsChecked" Value="true">
                                                <Setter TargetName="Border" Property="Background" Value="Green" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="3" />
                            <TextBox x:Name="PART_EditableTextBox" Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}" />
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="Black" />
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <TextBlock x:Name="TxbPaso" Foreground="White" FontFamily="Calibri" FontSize="22" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40 15 0 0"></TextBlock>
        <TextBlock x:Name="TxbPasoSiguiente" Foreground="#999" FontFamily="Calibri" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 15 70 0" TextAlignment="Right"></TextBlock>
        <Button Click="BtnStart_Click" x:Name="BtnStart" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="Transparent" Foreground="White" FontWeight="Bold" Margin="0 0 5 90" Padding="0 7 0 7" Width="45">Start</Button>
        <Button Click="BtnPrev_Click" x:Name="BtnPrev" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="Transparent" Foreground="White" FontWeight="Bold" Margin="0 0 5 50" Padding="0 7 0 7" Width="45">Prev.</Button>
        <Button Click="BtnNext_Click" x:Name="BtnNext" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="Transparent" Foreground="White" FontWeight="Bold" Margin="0 0 5 10" Padding="0 7 0 7" Width="45">Next</Button>
        <Button Click="BtnClose_Click" x:Name="BtnClose" VerticalAlignment="Top" HorizontalAlignment="Right" Background="Transparent" Foreground="White" FontWeight="Bold"  Width="20" Height="20" FontSize="12">X</Button>
        <TextBox PreviewMouseDown="TxtPaso_PreviewMouseDown" TextChanged="TxtPaso_TextChanged" GotFocus="TxtPaso_GotFocus" FontSize="20" x:Name="TxtPaso" Margin="0 0 5 130" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="45" Background="Transparent" Foreground="White" TextAlignment="Center"></TextBox>
        <ComboBox SelectionChanged="CmbBuildOrders_SelectionChanged" SelectedIndex="0" x:Name="CmbBuildOrders" Foreground="White" Width="140" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 5 60 10" FontSize="16" Style="{StaticResource ComboBoxColor}">
            <ComboBoxItem>Default</ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
