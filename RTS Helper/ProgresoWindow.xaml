<Window x:Class="RTSHelper.ProgresoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RTSHelper"
        mc:Ignorable="d" ResizeMode="NoResize" Height="80" Width="300" WindowStartupLocation="CenterScreen" Topmost="True" WindowStyle="None">
    <Grid>
        <StackPanel Width="300">
            <TextBlock Margin="10 10 10 0" x:Name="TbMensaje">Downloading Images Package...</TextBlock>
            <ProgressBar Margin="10" Height="30" Value="50" Maximum="100" x:Name="PbProgreso"></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
